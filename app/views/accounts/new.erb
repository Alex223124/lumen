

<% form_for @account, '', :class => 'form-horizontal' do |f| %>
  <%= f.text_block :name %>
  <%= f.text_block :email %>
  <%= f.password_block :password %>
  <%= f.password_block :password_confirmation %>
  <%= f.check_boxes_block :groups_to_join, options: Group.order(:slug.asc).map { |group| [group.slug, group.id] } %>
  <%= f.check_box_block :confirm_memberships %>
  <%= f.check_box_block :prevent_new_memberships %>
  <%= f.submit_block %>
<% end %>

