<div class="media">
  <a class="pull-left">
    <img style="width: 100px" src="<%=account.picture ? account.picture.thumb('100x100#').url : '/images/silhouette.png' %>">
  </a>
  <div class="media-body">
    <h4 class="media-heading"><a href="/accounts/<%=account.id%>"><%=account.name%></a></h4>   
    <ul class="fa-ul">    
      <%= partial :'accounts/memberships', :locals => {:account => account} %>
      <%= partial :'accounts/affiliations_list', :locals => {:account => account} %>
      <%= partial :'accounts/tags', :locals => {:account => account} %>
      <%= partial :'accounts/social_media', :locals => {:account => account, :display_placeholder => false} %>  
    </ul>
  </div>
</div> 