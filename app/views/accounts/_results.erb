
<p><%= page_entries_info @accounts, :model => 'Person' %></p>

<style>

  .account-minimal { height: 300px }
  .account-minimal:before {
    content:'';
    width:100%;
    height:100%;    
    position:absolute;
    left:0;
    top:0;
    background:linear-gradient(transparent 300px, white);
  }

</style>

<div class="row">
  <% @accounts.each { |account| %>
    <div class="col-md-2" class="account-minimal">
      <%= partial :'accounts/minimal', :locals => {:account => account}  %>
    </div>
  <% } %>
</div>

<%= will_paginate @accounts, :renderer => WillPaginate::ViewHelpers::BootstrapRenderer, :page_links => false %>