<% if !ENV['HIDE_SEARCH_MEMBERSHIPS'] %>    
  <% if account.public_memberships.count > 0 %>
    <li>
      <i title="Groups" class="fa fa-li fa-group"></i>
      <%=I18n.t(:member_of).capitalize%> <%= account.public_memberships.map { |membership| %Q{<a href="/groups/#{membership.group.slug}">#{membership.group.slug}</a>} }.to_sentence %>
    </li>
  <% end %>    
<% end %>
<% if !ENV['HIDE_ACCOUNT_AFFILIATIONS'] %>
  <% account.affiliations.each { |affiliation|%>
    <li><i title="<%=affiliation.title%> <%=I18n.t(:at)%> <%=affiliation.organisation.name%>" class="fa fa-li fa-briefcase"></i><%=affiliation.title%> <%=I18n.t(:at)%> <a href="/organisations/<%=affiliation.organisation_id%>"><%=affiliation.organisation.name%></a></li>
  <% } %>
<% end %>
<% if !ENV['HIDE_SEARCH_TAGS'] %>
  <% if account.account_tagships.count > 0 %>
    <li>
      <i title="<%=I18n.t(:account_tagships).capitalize%>" class="fa fa-li fa-tags"></i>
      <% account.account_tagships.each { |account_tagship|%>
        <a href="/network?account_tag_id=<%=account_tagship.account_tag_id%>" class="label label-primary" style="text-indent: 0"><%=account_tagship.account_tag.name%></a>
      <% } %>
    </li>
  <% end %>    
<% end %>