<ol class="breadcrumb">
  <% if current_account.memberships.count > 1 %>
    <li><a href="/">Groups</a></li>
  <% end %>
  <li>
    <a href="/groups/<%=@group.slug%>"><%=@group.slug%></a>    
  </li>
  <li class="active">
    Lists
  </li>      
</ol>

<div class="row">
  <div class="col-md-8">
    <%= partial :'lists/lists', :locals => {:lists => @lists} %>
  </div>
  <div class="col-md-4">
    <h2>Create a new list</h2>
    <% form_tag "/groups/#{@group.slug}/lists/create", :method => 'post' do %>
      <div class="form-group">
        <%= text_field_tag :title, :class => 'form-control', :placeholder => 'Title' %>
      </div>    
      <button type="submit" class="btn btn-default">Create</button>
    <% end %>
  </div>
</div>

