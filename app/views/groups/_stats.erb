<table class="table">

  <%{'Most conversations started' => @c, 'Most posts' => @cp, 'Most events created' => @e}.each { |h2,hash| %>

    <tr>
      <td colspan="2">
        <h2><%=h2%></h2>
      </td>
    </tr>

    <% hash.sort_by { |k,v| v.length }.reverse[0..9].each { |k,v| if k == hash.first[0]; max = v.length.to_f; end %>
      <tr>
        <td style="width: 20%"><a href="/accounts/<%=k.id%>"><%=k.name%></a></td>
        <td>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width:<%="#{100*(v.length.to_f/max)}%"%>">
              <%=v.length%>
            </div>
          </div>        
        </td>
      </tr>
    <% } %>

  <% } %>
      
</table>
