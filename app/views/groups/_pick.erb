<div class="row" style="margin-top: 10px">
  <div class="col-md-8 col-md-offset-2">
    <% form_tag '', :class => 'form-horizontal' do %>
      <div class="form-group">
        <label class="control-label col-md-3">Pick a group</label>
        <div class="col-md-6"> 
          <%=select_tag :slugs, :options => [''] + current_account.memberships.map(&:group).map(&:slug).sort, :class => 'form-control', :onchange => "location = '/groups/' + $(this).val() + '/#{collection}/new'" %>
        </div>
      </div>
    <% end %>
  </div>
</div>



