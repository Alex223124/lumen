
<style>h3 a.btn { float: right }</style>

<h2><%= @group ? "#{@group.slug}'s" : 'Your' %> week in review
  <small>
    <% if from.strftime("%b %Y") == to.strftime("%b %Y") %>
      <%=from.day.ordinalize%> &mdash; <%=(d = to).strftime("#{d.day.ordinalize} %b %Y")%>
    <% else %>
      <%=(d = from).strftime("#{d.day.ordinalize} %b %Y")%> &mdash; <%=(d = to).strftime("#{d.day.ordinalize} %b %Y")%>
    <% end  %>
  </small>
</h2>    

<% if events.length > 0 %>
  <h3>New events <a class="btn btn-default btn-sm" href="<%= @group ? "/groups/#{@group.slug}/calendar/add" : "/calendar/add"%>"><i class="fa fa-plus"></i> Add an event</a></h3>
  <% events.each { |event| %>
    <h4><a href="/groups/<%=event.group.slug%>/calendar/<%=event.id%>"><%=event.name%></a> <% if !@group%><small><i class="fa fa-group"></i> <%=event.group.slug%></small><% end%></h4>
    <%= partial :'events/summary', :locals => {:event => event, :no_more => true} %>
  <% } %>
<% end %>

<% if conversations.length > 0 %>
  <h3>Hot conversations <% if @group %><a class="btn btn-default btn-sm" href="/groups/<%=@group.slug%>"><i class="fa fa-comments"></i> Browse all conversations</a><% end%></h3>
  <%= partial :'conversations/conversations_table', :locals => {:conversations => conversations} %>
<% end %>     

<% if accounts.length > 0 %>
  <h3>New people <a class="btn btn-default btn-sm" href="<%= @group ? "/groups/#{@group.slug}" : "/"%>"><i class="fa fa-group"></i> View all people</a></h3>
  <ul class="list-unstyled clearfix" style="margin-top: 26px">    
    <% accounts.each { |account| %>
      <li style="display: block; margin-bottom: 10px; border: 1px solid #ddd; border-radius: 5px; padding: 5px">      
        <%= partial :'accounts/account', :locals => {:account => account} %>
      </li>
    <% } %>    
  </ul>
<% end %>  

<% if top_stories.length > 0 %>
  <h3>Top stories</h3>
  <div class="news-summary">
    <ol class="top-stories stories-list">
      <% top_stories.each_with_index { |e,i| %>
        <li class="stories-list-item" id="story-<%=i%>">
          <%               
          a = []
          a << "<small>"
          a << "#{e[:news_summary].title} on #{e[:daily_digest].date.strftime("%a #{d.day.ordinalize} %b")}"
          a << %Q{<small><i class="fa fa-group"></i> #{e[:news_summary].group.slug}</small>} if !@group
          a << %Q{</small>}
          h5 = e[:story].at_css('h5')
          h5.inner_html = h5.inner_html + a.join(' ')
        %>
          <%= e[:story] %>
        </li>
      <% } %>
    </ol>
  </div>
<% end %>        
