<div style="background: #318CBA; padding: 20px">
  <div class="container-fluid" style="text-align: center">
    <h2 style="font-size: 42px; color: white; margin-bottom: 20px">People using <%=ENV['SITE_NAME']%></h2>
    <div>
      <% random(Account.where(:picture_uid.ne => nil), 9).each {  |account| %>
        <img style="margin: 10px" title="<%=account.name.split(' ').first%>" style="width: 100px" class="img-circle img-bordered" src="<%=account.picture ? account.picture.thumb('100x100#').url : '/images/silhouette.png' %>">
      <% } %>
    </div>
  </div>
</div>