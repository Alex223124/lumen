<div style="padding: 20px">
  <div class="container-fluid" style="text-align: center">
    <h2 style="font-size: 42px; margin-bottom: 20px"><%=I18n.t(:groups).capitalize%></h2>
    <div>
      <% Group.where(:privacy.ne => 'secret').order_by(:slug.asc).each { |group| %>
        <h2>
          <a href="/groups/<%=group.slug%>"><%=group.slug%></a>
          <small>
            <%=pluralize(group.members.count, 'member')%>
          </small>
        </h2>
        <p><%= group.description %></p>
      <% } %>
    </div>
  </div>
</div>