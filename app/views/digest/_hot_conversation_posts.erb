<% if @hot_conversations.length > 0 %>
  <% @hot_conversations.each { |conversation| %>
    <h3 id="conversation-<%=conversation.id%>">
      <a href="/conversations/<%=conversation.slug%>"><%=conversation.subject%></a>
      <% if !@group %>
        <small>
          <i class="fa fa-group"></i> <%=conversation.group.slug%></span>
        </small>
      <% end %>
    </h3>

    <% conversation.visible_conversation_posts.order_by(:created_at.asc).each_with_index { |conversation_post, i|  %>
      <%= partial :'conversations/conversation_post', :locals => {:conversation_post => conversation_post, :i => i} %>
    <% } %>

  <% } %>
<% end %> 