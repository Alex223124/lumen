<h3><%=space.name%> <% if !@group %><small><%=g space.group%></small><% end%></h3>

<%= partial :'spaces/summary', :locals => {:space => space} %>

<p class="small">
  Added by <a href="/accounts/<%=space.account.id%>"><%=space.account.name%></a> on <%=space.created_at%>
  <% if space.group.memberships.find_by(account: current_account) %>
    &middot;
    <a href="/groups/<%=space.group.slug%>/spaces/<%=space.id%>/edit">Edit space</a>
  <% end %>
</p>

