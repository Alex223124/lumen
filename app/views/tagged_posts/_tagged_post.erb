
<div style="border: 1px solid #ddd; padding: 10px; margin: 1em 0; background: white; position: relative">

  <a class="edit" style="position: absolute; top:0; right: 5px" title="Delete post" data-confirm="Are you sure you want to delete this post?" href="/tagged_posts/<%=tagged_post.id%>/destroy"><i class="fa fa-times"></i></a>

  <div class="media" style="margin-top: 0">
    <span class="pull-left">
      <img class="media-object" style="width: 48px" src="<%=tagged_post.account.picture ? tagged_post.account.picture.thumb('48x48#').url : '/images/silhouette.png' %>">
    </span>
    <div class="media-body">
      <a href="/accounts/<%=tagged_post.account.id%>" style="font-weight: bold;"><%=tagged_post.account.name%></a>                
      <br />
      <a title="<%=tagged_post.created_at%>" style="font-size: 12px; color: #aaa;" href="/tagged_posts/<%=tagged_post.id%>"><%=time_ago_in_words(tagged_post.created_at)%> ago</a> 
    </div>
  </div> 

  <p style="margin: 1em 0"><%=Rinku.auto_link(tagged_post.body.gsub("\n","\n<br />"))%></p>

  <% if tagged_post.file %>
    <% if tagged_post.file.image? %>
      <a onclick="$('#tagged-post-lightbox-<%=tagged_post.id%> .modal-body').html('<img style=\'width: 100%\' src=\'<%=tagged_post.file.url%>\'>')" data-toggle="modal" href="#tagged-post-lightbox-<%=tagged_post.id%>"><img style="width: 150px;" src="<%=tagged_post.file.thumb('150x150#').url%>"></a>
      <div class="modal fade" id="tagged-post-lightbox-<%=tagged_post.id%>">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">              
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <i class="fa fa-paperclip"></i> <a href="<%=tagged_post.file.url%>"><%=tagged_post.file_name%></a>
    <% end %>
  <% end %>

  <% if tagged_post.url %>
    <%= partial :'wall/opengraph', :locals => {:title => tagged_post.title, :url => tagged_post.url, :description => tagged_post.description, :player => tagged_post.player, :picture => tagged_post.picture} %>
  <% end %>

  <div style="margin-top: 5px">
    <i class="fa fa-tags" title="Tags"></i>
    <% tagged_post.tagged_post_tagships.each { |tagship| %>
      <span class="label label-default"><%=tagship.account_tag.name%></span>
    <% } %>           
  </div>

</div>