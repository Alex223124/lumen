<% if !@group %>
  <div class="row" style="margin-top: 10px">
    <div class="col-md-6 col-md-offset-3">
      <% form_tag '', :class => 'form-horizontal' do %>
        <div class="form-group">
          <label class="control-label col-md-3">Pick a group</label>
          <div class="col-md-6"> 
            <%=select_tag :slugs, :options => [''] + current_account.memberships.map(&:group).map(&:slug), :class => 'form-control', :onchange => "location = '/groups/' + $(this).val() + '/conversations/new'" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>

<ol class="breadcrumb">
  <li><a href="/groups"><%=I18n.t(:groups).capitalize%></a></li>
  <li>
    <a href="/groups/<%=@group.slug%>"><%=@group.slug%></a>    
  </li>
  <li>
    <a href="/groups/<%=@group.slug%>/conversations"><%=I18n.t(:conversations).capitalize%></a>    
  </li>  
  <li class="active">
    <%=I18n.t(:new_conversation).capitalize%>
  </li>    
</ol>

<div class="row" style="margin-top: 10px">
  <div class="col-md-6 col-md-offset-3">
    <%= partial :'conversations/build' %>
  </div>
</div>

<% end %>