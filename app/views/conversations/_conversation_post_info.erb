

<% if !ENV['WALL_STYLE_CONVERSATIONS'] %>
  <a class="edit" href="/conversations/<%=conversation_post.conversation.slug%>#conversation-post-<%=conversation_post.id%>" title="<%=conversation_post.created_at%>"><%=timeago(conversation_post.created_at)%></a>
  &middot;
<% end %>

<% if !ENV['BCC_SINGLE'] %>  
  <a class="edit modal-trigger" href="/conversation_posts/<%=conversation_post.id%>/read_receipts"><%=pluralize(conversation_post.conversation_post_read_receipts.count,'person')%> read this</a>
  &middot;  
<% end %>

<a class="edit modal-trigger" href="/conversation_posts/<%=conversation_post.id%>/likes"><%=pluralize(conversation_post.likes.count,'person')%> liked this</a>

&middot;  

<% if !conversation_post.likes.find_by(account: current_account) %>
  <a href="/conversation_posts/<%=conversation_post.id%>/like" class="edit" title="Like this post" ><i class="fa fa-thumbs-o-up"></i> Like</a>
<% else %>        
  <a href="/conversation_posts/<%=conversation_post.id%>/remove_like" title="Remove your like"><i class="fa fa-thumbs-up"></i> Like</a>
  <% end %>



